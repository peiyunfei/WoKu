<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="8dp">

    <TextView
        android:id="@+id/tv_home_footer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_home_footer_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_home_footer_title"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

    <RelativeLayout
        android:id="@+id/rl_home_footer_layout"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_home_footer_title"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp">


        <ImageView
            android:id="@+id/iv_home_footer_one"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/iv_home_footer_two"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_home_footer_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_home_footer_layout"
        android:layout_marginBottom="10dp"
        android:textColor="@color/color_ff33b5e5"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_home_footer_from"
        android:background="@color/color_cdcdcd"/>
</RelativeLayout>