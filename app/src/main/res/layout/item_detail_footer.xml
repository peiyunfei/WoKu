<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="最近一周查看人数"
        android:textColor="@color/color_333333"
        android:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/ll_detail_footer_line"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="猜您喜欢"
        android:textColor="@color/color_333333"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_detail_footer_one_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_detail_footer_one_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5天学会IM"
                android:textColor="@color/color_333333"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_detail_footer_one_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥23"
                android:textColor="@color/color_cc0000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_detail_footer_one_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3赞    5评论"
                android:textColor="@color/color_333333"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_detail_footer_two_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_detail_footer_two_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5天学会IM"
                android:textColor="@color/color_333333"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_detail_footer_two_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥23"
                android:textColor="@color/color_cc0000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_detail_footer_two_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3赞    5评论"
                android:textColor="@color/color_333333"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>